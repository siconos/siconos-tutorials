 #!/bin/bash
 git clone https://github.com/siconos/siconos.git
 mkdir build
 cd build
 export BLAS_ROOT=/srv/conda
 export BLA_VENDOR=OpenBLAS
 cmake ../siconos -DUSER_OPTIONS_FILE=/home/jovyan/binder/siconos_confs/siconos_notebook.cmake -DCMAKE_INSTALL_PREFIX=/home/jovyan/install
 make -j 4
 make install


